
<md-dialog aria-label="Results">
  <form ng-cloak>
    <md-toolbar>
      <div class="md-toolbar-tools">
        <h2>Results</h2>
        <span flex></span>
        </md-button>
      </div>
    </md-toolbar>

    <md-dialog-content>
      <div class="md-dialog-content">
        <h2 ng-show="push">Push!</h2>
        <h2 ng-show="losers.includes(2)">Your hand lost!</h2>
        <h2 ng-show="losers.includes(3)">Your split hand lost!</h2>
        <h2 ng-show="winners.includes(2)">Your hand won!</h2>
        <h2 ng-show="winners.includes(3)">Your split hand won!</h2>
        <h2 ng-show="tie.includes([1,2]) && winnings!==0">Your hand tied the dealer!</h2>
        <h2 ng-show="tie.includes([1,3]) && winnings!==0">Your split hand tied the dealer!</h2>
        <h2 ng-show="winners.includes(4)">Your insurance bet won!</h2>
        <h2 ng-show="winnings===0">Push!</h2>
        <h2>Your net for this round is ${{ winnings }}</h2>
        <p>Please review the table, then place your next bet to begin another round!</p>
      </div>
    </md-dialog-content>

    <md-dialog-actions layout="row">
      <md-button ng-click="cancel()">
       Close
      </md-button>
    </md-dialog-actions>
  </form>
</md-dialog>

